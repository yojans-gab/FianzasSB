<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gradiente_moderno"
    tools:context=".Gestor.RegistrarFianza">

    <!-- Card principal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRegistrarFianza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <!-- Icono circular -->
                <ImageView
                    android:id="@+id/iconFianza"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_registrar_fianza"
                    android:background="@drawable/bg_circle"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp" />

                <!-- Título -->
                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar Fianza"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Empresa -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmpresa"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Empresa"
                    android:layout_marginBottom="12dp">

                    <AutoCompleteTextView
                        android:id="@+id/actvEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tipo de Fianza -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTipoFianza"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de Fianza"
                    android:layout_marginBottom="12dp">

                    <AutoCompleteTextView
                        android:id="@+id/actvTipoFianza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:padding="12dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fecha de Emisión -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFechaEmision"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Emisión"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendario"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFechaEmision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fecha de Vencimiento -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFechaVencimiento"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Vencimiento"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendario"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFechaVencimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- NOG -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNOG"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NOG"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNOG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fiador -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFiador"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fiador"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFiador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Beneficiario -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilBenificiario"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Beneficiario"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBenificiario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nombre del Proyecto -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNombreProyecto"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del Proyecto"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etnNombreProyecto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Monto -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMonto"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Monto"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMonto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fecha de Notificación -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFechaNotificacion"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Notificación"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendario"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFechaNotificacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardarFianza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="Guardar Fianza"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/blanco"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/boton_guardar_fianza"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@null" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
