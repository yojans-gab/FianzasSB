<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentPadding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Contenedor para la imagen, nombre, correo y rol -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">

            <!-- Foto del Usuario (ImageView Circular) -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivFotoUsuario"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                tools:srcCompat="@tools:sample/avatars" /> <!-- Placeholder, usa tu imagen por defecto -->

            <!-- Nombre del Usuario -->
            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Nombre del Usuario"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivFotoUsuario"
                app:layout_constraintTop_toTopOf="@id/ivFotoUsuario" />

            <!-- Correo del Usuario -->
            <TextView
                android:id="@+id/tvCorreoUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="correo@ejemplo.com"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvNombreUsuario"
                app:layout_constraintTop_toBottomOf="@id/tvNombreUsuario" />

            <!-- Rol del Usuario -->
            <TextView
                android:id="@+id/tvRolUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Rol: Administrador"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@id/ivFotoUsuario"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvNombreUsuario"
                app:layout_constraintTop_toBottomOf="@id/tvCorreoUsuario" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Contenedor para los botones (opcional, para agruparlos visualmente si es necesario) -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Botón Editar Usuario -->
            <ImageButton
                android:id="@+id/btnEditarUsuario"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar Usuario"
                android:padding="8dp"
                android:src="@drawable/ic_edit" />

            <!-- Botón Eliminar Usuario -->
            <ImageButton
                android:id="@+id/btnEliminarUsuario"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar Usuario"
                android:padding="8dp"
                android:src="@drawable/ic_eliminar_cat" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>