<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DatosFianza">

    <!-- Tarjeta Principal con la Información Clave -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título Principal -->
            <TextView
                android:id="@+id/tvDetalleTipoFianza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"
                tools:text="Fianza de Sostenimiento de Oferta" />

            <!-- Nombre del Proyecto -->
            <TextView
                android:id="@+id/tvDetalleNombreProyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Mejoramiento Carretera Rural" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Sección de Detalles Adicionales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetalleNog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            tools:text="NOG: 12345678" />

        <TextView
            android:id="@+id/tvDetalleEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            tools:text="Estado: Notificada" />

        <TextView
            android:id="@+id/tvDetalleFechaEmision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            tools:text="Fecha de Emisión: 20/05/2024" />

        <TextView
            android:id="@+id/tvDetalleFechaVencimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textStyle="bold"
            tools:text="Fecha de Vencimiento: 20/08/2024" />

    </LinearLayout>

</LinearLayout>